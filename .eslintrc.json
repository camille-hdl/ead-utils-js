{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:flowtype/recommended",
        "prettier",
        "prettier/babel",
        "prettier/flowtype",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "prettier", "flowtype", "babel"
    ],
    "rules": {
        "prettier/prettier": "error",
        "babel/new-cap": 1,
        "babel/no-invalid-this": 1,
        "babel/quotes": 1,
        "babel/semi": 1,
        "babel/no-unused-expressions": 1
    }
}